{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "esm",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "isolatedModules": true,
    "emitDeclarationOnly": true,
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "esm/src/*.ts",
    "esm/test/*.ts",
    "esm/system-test/*.ts"
  ]
}
